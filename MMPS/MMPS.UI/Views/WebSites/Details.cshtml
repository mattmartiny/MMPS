@model MMPS.DATA.WebSite




<div>
    <h4>Graphic</h4>
    <hr />
    <h3 class="h3">@Html.DisplayFor(model => model.SiteName)</h3>





    <img src="@Url.Content("~/Content/Images/Sites/" + Model.imageSource)" alt="@Model.alt" class="detailIMG" />

    <br />



    @Html.DisplayFor(model => model.description)
    <br />
    <br />

    <a href="@Model.siteUrl" target="_blank">@Html.DisplayFor(model => model.siteUrl)</a>


    <br />





</div>
<p>
    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.imageID })
        
    }
    |
    @Html.ActionLink("Back to List", "Index")
</p>

